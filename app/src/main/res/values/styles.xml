<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="AppTheme.Green" parent="Theme.AppCompat.Light" >
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#4CAF50</item>
    </style>

    <style name="AppTheme.Orange" parent="Theme.AppCompat.Light" >
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryDark">#F57C00</item>
        <item name="colorAccent">#FF9800</item>
    </style>

    <style name="AppTheme.Pink" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#C2185B</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="AppTheme.Red" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">#FF5252</item>
    </style>

    <style name="AppTheme.Blue" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#BBDEFB</item>
    </style>
    <style name="AppTheme.Brown" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#795548</item>
        <item name="colorPrimaryDark">#5D4037</item>
        <item name="colorAccent">#795548</item>
    </style>
    <style name="AppTheme.Amber" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FFA000</item>
        <item name="colorAccent">#FFC107</item>
    </style>
    <style name="AppTheme.Teal" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#009688</item>
    </style>



</resources>
